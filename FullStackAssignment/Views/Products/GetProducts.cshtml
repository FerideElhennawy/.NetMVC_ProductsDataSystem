@using FullStackAssignment.Models;
@{
    ViewBag.Title = "GetProducts";
}

<h2>Products List</h2>

<table class='table table-striped' aria-labelledby="tableLabel" *ngIf="products">
<thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
</thead>
<tbody>

    @foreach (Product item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.name</td>
            <td>@item.description</td>
        </tr>

    }

</tbody>
</table>